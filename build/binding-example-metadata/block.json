{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "my-theme/binding-example-metadata",
  "title": "Binding Meta Example Block",
  "category": "widgets",
  "icon": "smiley",
  "description": "Block that uses metadata binding",
  "supports": {
    "html": false
  },
  "textdomain": "my-theme",
  "attributes": {},
  "metadata": {
    "bindings": {
      "quote": {
        "source": "core/post-meta",
        "args": {
          "key": "my_theme_famous_quote"
        }
      },
      "image": {
        "source": "core/post-meta",
        "args": {
          "key": "my_theme_photo"
        }
      }
    }
  }
}